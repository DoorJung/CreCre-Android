<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="vm"
                type="com.crecrew.crecre.ui.main.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main.MainActivity">

        <androidx.appcompat.widget.Toolbar
                android:visibility="gone"
                android:id="@+id/act_main_tb"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_toolbar"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    tools:text="title"
                    android:id="@+id/act_main_tv_title"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

        </androidx.appcompat.widget.Toolbar>

        <com.crecrew.crecre.util.view.NonSwipeViewPager
                android:id="@+id/act_main_vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/act_main_tb"
                app:layout_constraintBottom_toTopOf="@+id/act_main_tl"/>

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/act_main_tl"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:tabSelectedTextColor="@color/violet_pink"
                app:tabTextColor="@color/brownish_grey"
                app:tabIndicator="@null"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>