<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="posts"
                type="com.crecrew.crecre.data.model.posts.Posts"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.main.MainActivity"
            android:background="@color/white">

        <androidx.cardview.widget.CardView
                android:id="@+id/item_board_cv"
                android:layout_marginVertical="8dp"
                android:layout_width="56dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:glideImg="@{posts.thumbnail_url}"/>

        </androidx.cardview.widget.CardView>


        <TextView
                tools:text="제목"
                android:text="@{posts.title}"
                android:id="@+id/item_board_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="6sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                app:layout_constraintStart_toEndOf="@+id/item_board_cv"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="9dp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@+id/item_board_tv_detail"/>

        <TextView
                tools:text="추천 10 | 댓글 10 | 18:47 | 자유게시판"
                app:postsDetailText="@{posts}"
                android:id="@+id/item_board_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#a4a4a4"
                android:lineSpacingExtra="5sp"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:layout_marginStart="9dp"
                app:layout_constraintStart_toEndOf="@+id/item_board_cv"
                app:layout_constraintTop_toBottomOf="@+id/item_board_tv_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f7f7f7"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>